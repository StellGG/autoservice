<%- include('blocks/header.ejs') %> <br>
<% if(login) { %>
    <a href="/profile">Вы уже вошли в систему</a>
    <% } else { %>
<div class="box">
    <h2>Вход</h2>
    <form action="/auth" method="post">
    <div class="inputBox">
        <input type="text" name="login" required>
        <label>Логин:</label>
    </div>

    <div class="inputBox">
        <input type="password" name="password" required>
        <label>Пароль:</label>
    </div>
    <button>Войти</button>

    <a href="/register">Зарегистрироваться</a>
</form>
</div>

<% } %>